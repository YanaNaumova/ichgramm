version: "3.8"
services:
  ichgram:
    build:
      context: ./server
      dockerfile: Dockerfile
    container_name: ichgram
    ports:
      - "3000:3000" # Исправлен отступ
    depends_on:
      - mongo-database
    volumes:
      - ./server/.env:/app/.env

  frontichgram:
    build:
      context: ./client
      dockerfile: Dockerfile
    container_name: frontichgram
    depends_on:
      - ichgram
    ports:
      - "5173:5173"

  mongo-database:
    container_name: mongo-database
    image: mongo:7
    restart: unless-stopped
    ports:
      - "27018:27017"
    command: --auth --bind_ip 0.0.0.0
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: root
      MONGO_INITDB_DATABASE: ichgramm
    env_file:
      - ./server/.env
    volumes:
      - ./data/db:/data/db

volumes:
  mongo-data:
